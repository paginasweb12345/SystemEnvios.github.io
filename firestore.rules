rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // üë§ Usuarios
    match /usuarios/{userId} {
      // Permitir lectura solo del propio usuario o admin
      allow read: if request.auth != null && 
                  (request.auth.uid == userId || 
                   get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'administrador');
      
      // Permitir escritura solo en el propio documento
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // üì¶ Env√≠os
    match /envios/{envioId} {
      // Permitir lectura si:
      // - Es el cliente propietario
      // - Es el repartidor asignado
      // - Es administrador
      allow read: if request.auth != null &&
                  (resource.data.userId == request.auth.uid ||
                   resource.data.repartidorId == request.auth.uid ||
                   get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'administrador');
      
      // Permitir crear env√≠os solo clientes autenticados
      allow create: if request.auth != null &&
                    request.resource.data.userId == request.auth.uid;
      
      // Permitir actualizar si:
      // - Es el cliente propietario (solo puede editar antes de asignar repartidor)
      // - Es el repartidor asignado (solo puede cambiar estado)
      // - Es administrador
      allow update: if request.auth != null &&
                    (resource.data.userId == request.auth.uid ||
                     resource.data.repartidorId == request.auth.uid ||
                     get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'administrador');
      
      // Solo admin puede eliminar
      allow delete: if request.auth != null &&
                    get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'administrador';
    }
  }
}

